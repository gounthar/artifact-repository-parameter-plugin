<?jelly escape-by-default='true'?>
<j:jelly xmlns:j="jelly:core">

    <select name="value">
        <option value="">Please select ...</option>
        <j:forEach items="${arpResult}" var="item" varStatus="loop">
            <j:choose>
                <j:when test="${item.value.selected == true}">
                    <option value="${item.value.value};${item.value.key}" selected="selected">
                        ${item.value.value}
                    </option>
                </j:when>
                <j:otherwise>
                    <option value="${item.value.value};${item.value.key}">
                        ${item.value.value}
                    </option>
                </j:otherwise>
            </j:choose>
        </j:forEach>
    </select>

</j:jelly>
